<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_food_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/iv_food_pic"
        android:text="双人牛排套餐"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_food_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_food_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_food_pic"
        android:text="好评如潮" />

    <TextView
        android:id="@+id/tv_sale_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_food_desc"

        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_food_pic"
        android:text="月售50" />

    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_sale_num"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_food_pic"
        android:text="￥555"
        android:textColor="#f00" />

    <TextView
        android:id="@+id/tv_add_cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/add"
        android:gravity="center"
        />
</RelativeLayout>
